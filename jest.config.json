{
	"bail": true,
	"expand": true,
	"verbose": true,
	"useStderr": true,
	"forceExit": true,
	"name": "diibot",
	"logHeapUsage": true,
	"collectCoverage": true,
	"testRegex": "(./ci/__tests__/.*| (\\.|/)(test|spec))\\.(jsx?|tsx?)$",
	"transform": {
		"^.+\\.tsx?$": "ts-jest"
	},
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"js",
		"jsx",
		"json",
		"node"
	],
	"coveragePathIgnorePatterns": [
		"./dist/",
		"./node_modules/"
	],
	"coverageReporters": [
		"json",
		"lcov",
		"text"
	],
	"globals": {
		"ts-jest": {
			"enableTsDiagnostics": true
		}
	}
}
